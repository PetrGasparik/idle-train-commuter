
{
  "name": "desktop-train-sim",
  "version": "1.0.0",
  "description": "Top-down train simulation for your desktop perimeter",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "electron .",
    "build-exe": "npm run build && electron-builder"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "@google/genai": "^1.35.0",
    "systeminformation": "^5.21.22"
  },
  "build": {
    "appId": "com.railway.desktop.sim",
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": "portable",
      "icon": "icon.ico"
    },
    "directories": {
      "output": "release"
    }
  }
}
